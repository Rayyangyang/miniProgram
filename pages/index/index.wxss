/* search */

.search {
  /* width:700rpx; */
  display: flex;
  justify-content: center;
  margin-top: 20rpx;
  position: relative;
}

.img {
  width: 35rpx;
  height: 35rpx;
  position: absolute;
  left: 55rpx;
  top: 18rpx;
}

.inp {
  width: 600rpx;
  height: 70rpx;
  /* border:1px solid #333; */
  padding: 0 20rpx 0 70rpx;
  background-color: #eee;
  border-radius: 10rpx;
}

/* list */

.box {
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
  margin-top: 30rpx;
}

.itemBox {
  width: 150rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.listImg {
  width: 80rpx;
  height: 80rpx;
  display: block;
}

.name {
  font-size: 20rpx;
  margin-bottom: 20rpx;
}

/* 特价商品 */

.supGoodsBox {
  margin-top: 40rpx;
  padding: 0 20rpx;
}

.supTitle {
  font-size: 50rpx;
}

.supGoods {
  width: 100%;
  display: flex;
}

.supImg {
  width: 200rpx;
  height: 200rpx;
  display: block;
}

.supItemBox {
  /* display: inline-block; */
  margin: 20rpx 40rpx 0 0;
}

.supGoodsTitle {
  width: 200rpx;
  display: block;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.price {
  width: 200rpx;
  display: block;
  color: red;
}

/* 全部商品 */

.allGoodsBox {
  margin-top: 40rpx;
  padding: 0 20rpx;
}

.allGoodsTitle {
  font-size: 50rpx;
  margin-bottom:20rpx;
}
.goodsBox{
  display: flex; 
  margin: 20rpx 0;
}
.allGoodsImg {
  width: 200rpx;
  height: 200rpx;
}
.contentBox{
  display: flex;
  flex-direction: column;
  margin-left:40rpx;
  max-width: 300rpx;
}
.goodsPrice{
  margin-top:20rpx;
  color: red;
}